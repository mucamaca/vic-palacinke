<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.vic.pancake.piSide.GUI.controllers.SauceSelectorController">
    <top>
        <Text BorderPane.alignment="TOP_CENTER" text="Izberi nadev">
            <font>
                <Font size="25.0"/>
            </font>
        </Text>
    </top>
    <center>
        <FlowPane BorderPane.alignment="CENTER">
            <BorderPane prefHeight="400" prefWidth="250"
                        onMouseClicked="#onSauce1Selected">
                <bottom>
                    <Label BorderPane.alignment="BOTTOM_CENTER" text="Nutella"/>
                </bottom>
            </BorderPane>
            <BorderPane prefHeight="400" prefWidth="250"
                        onMouseClicked="#onSauce2Selected">
                <bottom>
                    <Label BorderPane.alignment="BOTTOM_CENTER" text="Liquid bananas"/>
                </bottom>
            </BorderPane>
            <BorderPane prefHeight="400" prefWidth="250"
                        onMouseClicked="#onSauce3Selected">
                <bottom>
                    <Label BorderPane.alignment="BOTTOM_CENTER" text="Gassed compressor"/>
                </bottom>
            </BorderPane>
        </FlowPane>
    </center>
</BorderPane>