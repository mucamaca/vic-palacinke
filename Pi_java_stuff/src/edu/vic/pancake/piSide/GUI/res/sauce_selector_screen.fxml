<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import java.net.URL?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" styleClass="background"
            fx:controller="edu.vic.pancake.piSide.GUI.controllers.SauceSelectorController">
    <stylesheets>
        <URL value="@css/Splosno.css"/>
        <URL value="@css/IzbirnikMarmelade.css"/>
    </stylesheets>
    <top>
        <Text BorderPane.alignment="TOP_CENTER" text="Izberi nadev" styleClass="textnavrhu">
            <font>
                <Font size="25.0"/>
            </font>
        </Text>
    </top>
    <center>
        <GridPane BorderPane.alignment="CENTER" hgap="5">
            <padding><Insets right="10" left="10"/></padding>
            <children>
                <BorderPane GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="selectPanel"
                            onMouseClicked="#onSauce1Selected" fx:id="saucePanel1">
                    <bottom>
                        <Label BorderPane.alignment="BOTTOM_CENTER" text="Prvi namaz" styleClass="selectpaneltext"/>
                    </bottom>
                </BorderPane>
                <BorderPane GridPane.rowIndex="0" GridPane.columnIndex="1"  styleClass="selectPanel"
                            onMouseClicked="#onSauce2Selected" fx:id="saucePanel2">
                    <bottom>
                        <Label BorderPane.alignment="BOTTOM_CENTER" text="Drugi namaz" styleClass="selectpaneltext"/>
                    </bottom>
                </BorderPane>
                <BorderPane GridPane.rowIndex="0" GridPane.columnIndex="2"  styleClass="selectPanel"
                            onMouseClicked="#onSauce3Selected" fx:id="saucePanel3">
                    <bottom>
                        <Label BorderPane.alignment="BOTTOM_CENTER" text="Tretji namaz" styleClass="selectpaneltext"/>
                    </bottom>
                </BorderPane>
            </children>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" percentWidth="33.3"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" percentWidth="33.3"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="100" percentWidth="33.3"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" minHeight="200" percentHeight="98.5"/>
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <FlowPane alignment="CENTER">
            <padding><Insets bottom="3"/></padding>
            <Button text="Brez namaza" prefWidth="450" onAction="#ohneFill" styleClass="button"/>
        </FlowPane>
    </bottom>
</BorderPane>